

# Rutas para Segmentos

POST    /segment/create                 controllers.SegmentController.createSegment(request:Request)

GET     /segment                        controllers.SegmentController.getAllSegments()

GET     /segment/:id                    controllers.SegmentController.getSegmentById(id: Long)

PUT     /segment/update/:id             controllers.SegmentController.updateSegment(id: Long, request:Request)

DELETE  /segment/delete/:id             controllers.SegmentController.deleteSegment(id: Long)

GET     /segmentdetails                  controllers.SegmentController.getAllSegmentDetails()



# Rutas para Calzadas
POST    /roadway/create                 controllers.RoadwayController.createRoadway(request:Request)

GET     /roadway                        controllers.RoadwayController.getAllRoadways()

GET     /roadway/:id                    controllers.RoadwayController.getRoadwayById(id: Long)

PUT     /roadway/update/:id             controllers.RoadwayController.updateRoadway(id: Long, request:Request)

DELETE  /roadway/delete/:id             controllers.RoadwayController.deleteRoadway(id: Long)

GET     /roadwaybysegment/:id           controllers.RoadwayController.getRoadwaysBySegmentId(id: Long)


# Rutas para Bordillos
POST    /curb/create                    controllers.CurbController.createCurb(request:Request)

GET     /curb                           controllers.CurbController.getAllCurbs()

GET     /curb/:id                       controllers.CurbController.getCurbById(id: Long)

PUT     /curb/update/:id                controllers.CurbController.updateCurb(id: Long, request:Request)

DELETE  /curb/delete/:id                controllers.CurbController.deleteCurb(id: Long)

GET     /curbsegment/:id                controllers.CurbController.getCurbsBySegmentId(id: Long)